{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ contact.id }}</td>
        </tr>
        <tr>
            <th>FirstName</th>
            <td>{{ contact.firstName }}</td>
        </tr>
        <tr>
            <th>LastName</th>
            <td>{{ contact.lastName }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ contact.address }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ contact.phone }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ contact.updatedAt ? contact.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('contact_index') }}">back to list</a>

    <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>
{% endblock %}


{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.contact_details'|trans({'%id%': contact.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.contact_details'|trans({'%id%': contact.id|default('')}) }}</h1>

    {% if contact is defined and contact|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'global.label.id'|trans }}</dt>
            <dd>{{ contact.id }}</dd>
            <dt>{{ 'global.label.first_name'|trans }}</dt>
            <dd>{{ contact.firstName }}</dd>
            <dt>{{ 'global.label.last_name'|trans }}</dt>
            <dd>{{ contact.lastName }}</dd>
            <dt>{{ 'global.label.address'|trans }}</dt>
            <dd>{{ contact.address }}</dd>
            <dt>{{ 'global.label.phone'|trans }}</dt>
            <dd>{{ contact.phone }}</dd>
            <dt>{{ 'global.label.created_at'|trans }}</dt>
            <dd>{{ contact.createdAt|format_date('long') }}</dd>
            <dt>{{ 'global.label.updated_at'|trans }}</dt>
            <dd>{{ contact.updatedAt|format_date('long') }}</dd>
        </dl>
        <p>
            <a href="{{ url('contact_index') }}" title="{{ 'global.action.back_to_list'|trans }}">
                {{ 'global.action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'global.message.empty_item'|trans }}
        </p>
    {% endif %}
{% endblock %}